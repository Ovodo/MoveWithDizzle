{
  "name": "movewithdizzle",
  "displayName": "MoveWithDizzle",
  "description": "A low code platform for writing and interacting with move smart contracts",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "moveAssistant",
          "title": "MoveWithDizzle",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "moveContractView",
          "name": "Sui Move Explorer"
        }
      ],
      "moveAssistant": [
        {
          "id": "moveAssistant.structs",
          "name": "Structs",
          "type": "webview"
        },
        {
          "id": "moveAssistant.functions",
          "name": "Functions",
          "type": "webview"
        },
        {
          "id": "moveAssistant.assistant",
          "name": "Assistant",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "movewithdizzle.startContract",
        "title": "Start a New Contract"
      },
      {
        "command": "movewithdizzle.deployContract",
        "title": "Deploy Current Contract"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@langchain/community": "^0.3.38",
    "@langchain/core": "^0.3.43",
    "@langchain/langgraph": "^0.2.61",
    "@langchain/mongodb": "^0.1.0",
    "@langchain/openai": "^0.5.2",
    "@langchain/textsplitters": "^0.1.0",
    "@tailwindcss/postcss": "^4.1.3",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "langchain": "^0.3.19",
    "mongodb": "^6.15.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  }
}
