{
  "name": "movewithdizzle",
  "displayName": "MoveWithDizzle",
  "description": "A low code platform for writing and interacting with move smart contracts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "moveAssistant",
          "title": "MoveWithDizzle",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "moveAssistant": [
        {
          "id": "moveAssistant.structs",
          "name": "Structs",
          "type": "webview"
        },
        {
          "id": "moveAssistant.functions",
          "name": "Functions",
          "type": "webview"
        },
        {
          "id": "moveAssistant.snippets",
          "name": "Snippets",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "movewithdizzle.startContract",
        "title": "Start a New Contract"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
